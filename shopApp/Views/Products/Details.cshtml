@model shopApp.Models.Product

<div class="container mt-4">

    <div class="d-flex justify-content-between mb-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Изменить товар</a>
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Удалить товар?');">
            <button type="submit" class="btn btn-danger">Удалить товар</button>
        </form>
    </div>

    <div class="card shadow">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="@Model.Name" />
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h2 class="card-title">@Model.Name</h2>
                    <h4 class="text-success">@($"{Model.Price:N2} сом")</h4>

                    <p><strong>Категория:</strong> @Model.Category?.Name</p>
                    <p><strong>Бренд:</strong> @Model.Brand?.Name</p>
                    <p><strong>Дата добавления:</strong> @Model.CreatedDate</p>
                    <p><strong>Дата обновления:</strong> @Model.UpdateDate</p>
                </div>
            </div>
        </div>
    </div>

</div>
