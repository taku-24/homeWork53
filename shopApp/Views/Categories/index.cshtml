@model List<Category>

@{
    ViewData["Title"] = "Все категории";
}

<h2>Категории</h2>
    <a asp-action="Create" asp-controller="Categories" class="btn btn-success">Добавить категорию</a>
    
    

<div class="table_section">

    @if (@Model.Count == 0)
    {
        <p>Категории еще не добавлены</p>
    }
    else
    {
        <table style="width: 100%; font-size: 25px">
            <tr>
                <th>Id</th>

                <th>Наименование</th>
                
            </tr>
            @foreach (var category in @Model)
            {
                <tr>

                    <td>@category.Id</td>

                    <td>@category.Name</td>

                    <td>
                        <a asp-action="Delete" asp-route-id="@category.Id">
                            <button type="submit" class="btn btn-danger btn-sm">Удалить</button>
                        </a>
                    </td>
                    
                </tr>
            }
        </table>
    }
</div>